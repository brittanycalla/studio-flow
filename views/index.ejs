<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/header') %>
    <%- include('partials/drawer-top') %>
    <div class="stats bg-white shadow">
        <div class="stat">
          <div class="stat-figure text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
          </div>
          <div class="stat-title text-black">Shoots this week</div>
          <div class="stat-value text-primary"><%- numShoots %></div>
          <div class="stat-desc text-black">21% more than last month</div>
        </div>
    </div>
    <div class="stats bg-white shadow">
        <div class="stat">
          <div class="stat-figure text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
          </div>
          <div class="stat-title text-black">Items this week</div>
          <div class="stat-value text-primary"><%- numItems %></div>
          <div class="stat-desc text-black">21% more than last month</div>
        </div>
    </div>

    <div class="stats bg-white shadow">
      <div class="stat">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
        </div>
        <div class="stat-title text-black">Another Stat!</div>
        <div class="stat-value text-primary"><%- numItems %></div>
        <div class="stat-desc text-black">21% more than last month</div>
      </div>
    </div>

    <div class="w-full overflow-x-auto">
        <table class="table w-full">
          <!-- head -->
          <thead>
            <tr>
              <th>Name</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Content Type</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% shoots.forEach( el => { %>
                <tr class="hover" data-id="<%=el._id%>">
                    <td><a href="/shoot/<%=el._id%>"><%= el.shootName %></a></td>
                    <td><a href="/shoot/<%=el._id%>"><%= el.startDate.toLocaleDateString([], { month: 'short',
                        day: '2-digit', timeZone: 'UTC' }) %></a></td>
                    <td><a href="/shoot/<%=el._id%>"><%= el.endDate.toLocaleDateString([], { month: 'short',
                        day: '2-digit', timeZone: 'UTC' }) %></a></td>
                    <td><a href="/shoot/<%=el._id%>"><%= el.contentType %></a></td> 
                    <td>                   
                      <form
                      action="/items/deleteItem/<%= el._id %>?_method=DELETE"
                      method="POST"
                      >
                          <button class="fa-solid fa-trash" type="submit"></button>
                      </form>
                    </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

    <%- include('partials/drawer-bottom') %>
</body>